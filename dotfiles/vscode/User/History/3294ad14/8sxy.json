{
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 14,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

  // vim settings
  "vim.debug.loggingLevel": "debug",
  "vim.hlsearch": true,

  // vim keybindings
  "vim.insertModeKeyBindings": [
    {
      // insert: tab to escape
      // this does not work, so i've repeated it in keybindings.json
      "before": ["Tab"],
      "after": ["<C-[>"]
    }
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      // normal: Enter to save
      "before": ["<CR>"],
      "commands": [":w"]
    },
    {
      // normal: Z,Z to save+close
      "before": ["Z", "Z"],
      "commands": [":wq"]
    },
    {
      // normal: Spacebar to add blank line
      // this does not work, so i've repeated it in keybindings.json
      "before": ["<Space>"],
      "commands": ["o", "<Esc>"]
    },
    {
      // normal: tab to indent
      "before": ["tab"],
      "commands": ["editor.action.indentLines"]
    },
    {
      // normal: shift+tab to outdent
      "before": ["S-tab"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      // normal: ctrl+j to skip down to blank line
      "before": ["<C-j>"],
      "after": ["}"]
    },
    {
      // normal: ctrl+k to skip up to blank line
      "before": ["<C-k>"],
      "after": ["{"]
    },
    {
      // normal: ctrl+n for next tab
      "before": ["<C-n>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      // normal: ctrl+p for previous tab
      // this does not work, so i've repeated it in keybindings.json
      "before": ["C+p"],
      "commands": ["workbench.action.previousEditor"]
    }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    {
      // visual: > to indent
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      // visual: < to outdent
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      // visual: > to indent
      "before": ["tab"],
      "commands": ["editor.action.indentLines"]
    },
    {
      // visual: < to outdent
      "before": ["S-tab"],
      "commands": ["editor.action.outdentLines"]
    }
  ],

  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "debug.node.autoAttach": "on",
  "workbench.panel.defaultLocation": "right",
  // "[jsonc]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.enableDebugLogs": true,
  "team.showWelcomeMessage": false,
  "settingsSync.ignoredExtensions": [],
  "window.zoomLevel": 1,
  "editor.formatOnSave": true,
  "search.exclude": {
    "tests/cypress/**": true
  }
}
